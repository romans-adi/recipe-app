<div class="px-4 py-6">
  <% if @recipes.any? %>
    <ul class="w-full gap-4 mt-4 text-white">
      <% @recipes.each do |recipe| %>
        <li class="pb-4 mb-4 bg-black bg-opacity-50 rounded-lg p-8 my-8">
          <div class="flex flex-col sm:flex-row items-center justify-between">
            <div class="w-full sm:w-1/3">
              <h3 class="font-semibold text-white">
                <%= link_to recipe.name, recipe_path(recipe.id), class: "text-white hover:underline" %>
              </h3>
            </div>
            <div class="flex-1 sm:ml-4">
              <p class="py-4 px-2 flex flex-col"><%= recipe.description %></p>
            </div>
            <% if can?(:destroy, recipe) %>
              <div class="mt-4 sm:mt-0">
                <%= button_to "Remove", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" }, class: "font-semibold bg-red-500 hover:bg-red-600 text-white text-bold py-2 px-4 rounded" %>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-2xl text-white">You don't have any recipes yet.</p>
  <% end %>
</div>
