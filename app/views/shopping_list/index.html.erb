<% if @foods.present? %>
<div class="text-center">
  <h2 class="text-3xl font-semibold text-white">Shopping List</h2>
</div>
<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
  <div class="bg-black bg-opacity-50 p-4 rounded-md shadow-md text-white">
    <p class="font-semibold">Amount of food items to buy:</p>
    <p><%= @foods.length %></p>
  </div>
  <div class="bg-black bg-opacity-50 p-4 rounded-md shadow-md text-white">
    <p class="font-semibold">Total value of food needed:</p>
    <p><%= number_to_currency(@total_price, unit: '$') %></p>
  </div>
</div>
<table data-controller="sort" class="mt-4 w-full bg-black bg-opacity-50 shadow-md rounded-md overflow-hidden text-white">
<thead class="bg-black bg-opacity-75 border-b">
  <tr>
    <th
      data-action="click->sort#sort"
      data-sort-column="food"
      data-sort-order="asc"
    >
      Food
      <i class="fas fa-sort"></i>
    </th>
    <th
      data-action="click->sort#sort"
      data-sort-column="quantity"
      data-sort-order="asc"
    >
      Quantity
      <i class="fas fa-sort"></i>
    </th>
    <th
      data-action="click->sort#sort"
      data-sort-column="price"
      data-sort-order="asc"
    >
      Price
      <i class="fas fa-sort"></i>
    </th>
  </tr>
</thead>
  <tbody>
    <% @foods.each do |ingredient| %>
      <tr class="border-b">
        <td class="py-3 px-4 text-center"><%= ingredient.name %></td>
        <td class="py-3 px-4 text-center"><%= ingredient.total_quantity_recipes %> <%= ingredient.measurement_unit %></td>
        <td class="py-3 px-4 text-center"><%= number_to_currency(ingredient.price * ingredient.total_quantity_recipes, unit: '$') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <h1 class="text-2xl font-semibold text-white">
    There's no items in the shopping list yet.
  </h1>
<% end %>
</div>
